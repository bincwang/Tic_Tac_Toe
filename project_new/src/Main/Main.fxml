<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>


<GridPane fx:controller="Main.Controller"
          xmlns:fx="http://javafx.com/fxml/1"
          xmlns="http://javafx.com/javafx/2.2"
          fx:id="anchor"
          alignment="center"
          hgap="10"
          vgap="10">

    <stylesheets>
        <URL value="@Main.css" />
    </stylesheets>

    <Label fx:id="info" text="Current: Black" GridPane.rowIndex="0" GridPane.columnIndex="3" GridPane.columnSpan="3"/>
    <Label fx:id="info3" text="Mode: Two player" GridPane.rowIndex="1" GridPane.columnIndex="3" GridPane.columnSpan="3"/>
    <Button fx:id="pos0" GridPane.columnIndex="3" GridPane.rowIndex="2" onAction="#clicked"/>
    <Button fx:id="pos1" GridPane.columnIndex="4" GridPane.rowIndex="2" onAction="#clicked"/>
    <Button fx:id="pos2" GridPane.columnIndex="5" GridPane.rowIndex="2" onAction="#clicked"/>
    <Button fx:id="pos3" GridPane.columnIndex="3" GridPane.rowIndex="3" onAction="#clicked"/>
    <Button fx:id="pos4" GridPane.columnIndex="4" GridPane.rowIndex="3" onAction="#clicked"/>
    <Button fx:id="pos5" GridPane.columnIndex="5" GridPane.rowIndex="3" onAction="#clicked"/>
    <Button fx:id="pos6" GridPane.columnIndex="3" GridPane.rowIndex="4" onAction="#clicked"/>
    <Button fx:id="pos7" GridPane.columnIndex="4" GridPane.rowIndex="4" onAction="#clicked"/>
    <Button fx:id="pos8" GridPane.columnIndex="5" GridPane.rowIndex="4" onAction="#clicked"/>
    <Button fx:id="restart" text="RESTART" GridPane.columnIndex="3" GridPane.rowIndex="5" GridPane.columnSpan="3" onAction="#init"/>
    <Button fx:id="switch" text="switch mode" GridPane.columnIndex="3" GridPane.rowIndex="6" GridPane.columnSpan="3" onAction="#switch"/>
    <ImageView fx:id="pic1" fitHeight="100.0" fitWidth="100.0" GridPane.columnIndex="0" GridPane.rowIndex="2" GridPane.columnSpan="2" GridPane.rowSpan="3">
        <image>
            <Image url="@my_image.png"/>
        </image>
    </ImageView>
    <ImageView fx:id="pic2" fitHeight="100.0" fitWidth="100.0" GridPane.columnIndex="6" GridPane.rowIndex="2" GridPane.columnSpan="2" GridPane.rowSpan="3">
        <image>
            <Image url="@my_image.png"/>
        </image>
    </ImageView>
